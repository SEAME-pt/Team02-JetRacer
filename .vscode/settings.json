{
    "cmake.buildDirectory": "${workspaceFolder}/CarController/build",
    "editor.defaultFormatter": "xaver.clang-format",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "clang-format.executable": "/usr/bin/clang-format",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.clangTidy.path": "/usr/bin/clang-format",
    "files.associations": {
        "iostream": "cpp",
        "stdexcept": "cpp"
    }
}